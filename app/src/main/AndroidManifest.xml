<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ptappmovil.upiita.pt_appmovil">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_upiita"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Splash screen -->
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Activities.ControlActivity"
            android:label="@string/title_activity_control"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.LightActivity"
            android:label="@string/title_activity_light"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.LockActivity"
            android:label="@string/title_activity_lock"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.AirActivity"
            android:label="@string/title_activity_air"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.AccessActivity"
            android:label="@string/title_activity_access"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ServiceActivity"
            android:label="@string/title_activity_service"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.OrderActivity"
            android:label="@string/title_activity_order"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
